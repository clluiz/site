<ul class="columns-1 md:columns-3 list-none">
    {% for project in projects %}
        <li class="max-w-sm rounded overflow-hidden shadow-lg" style="min-height: 440px">
            {# <img src="{{ project.img | url}}" /> #}
            <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2 text-secondary-color">
                    <a class="underline" href="{{ project.link }}" target="_blank" rel="noopener">
                        {{ project.name }}
                    </a>
                </div>
                <p class="text-justify text-gray-700 text-base">{{ project.description[locale] }}</p>
            </div>

            <p class="px-6 py-4 font-semibold">{{ 'main_techs' | i18n }}</p>

            <div class="px-6 pt-4 pb-2">
                {% for tech in project.tech %}
                    <span class="inline-block bg-gray rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#{{ tech }}</span>
                {% endfor %}
            </div>
        </li>
    {% endfor %}
</ul>