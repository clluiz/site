<body class="bg-indigo-800">

  <div id="side-menu" class="fixed top-0 left-[-250px] w-[240px] h-screen z-50 bg-sky-700/50 p-5
  flex flex-col space-y-5 text-white duration-300">
    <button class="text-right text-4xl" onclick="closeMenu()">&times;</button>
    <a class="hover:text-yellow-300 font-semibold text-lg" href="/">Home</a>
    <a class="hover:text-yellow-300 font-semibold text-lg" href="/blog.html">Blog</a>
    <a class="hover:text-yellow-300 font-semibold text-lg" href="/projects.html">Projects</a>
  </div>

  <header class="max-w-screen-lg flex justify-between py-4 mx-auto">
    <div class="text-white font-bold">
      LOGO
    </div>

    <div>
      <img class="inline-block cursor-pointer" width="36" src="{{ '/images/sharp-menu.svg' | url }}" onclick="openMenu()" alt="A hamburguer icon that to show de menu" />
      <a href="https://twitter.com/cleiton_dev" rel="noopener" target="_blank">
        <img class="inline-block" width="36" src="{{ '/images/twitter.svg' | url }}" alt="Twitter logo" />
      </a>
      <a href="https://www.linkedin.com/in/cleiton-luiz-nodejs-javascript-freelancer/" rel="noopener" target="_blank">
